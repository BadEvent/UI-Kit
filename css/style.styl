.grid__body
    display grid
    grid-template-columns: 1fr 1fr 1fr
.grid__item
    margin 0px auto
.item__block
    width 320px
    margin-bottom 20px
.item__block-text
    display -webkit-flex
    display -moz-flex
    display -ms-flex
    display -o-flex
    display flex
    justify-content space-between
    margin-bottom 8px
input
    width: 320px
    height: 44px
    background: #FFFFFF
    border: 1px solid dark_shade_25
    box-sizing: border-box
    border-radius: 4px
    {montserrat}
    font-size: 14px
    line-height: 18px
    color dark_shade_25
    padding-left 15px
    transition 1s ease-out .3s
input:focus,input:hover
    border: 1px solid dark_shade_50
    outline none
    line-height: 24px
    {dark_shade_75-color}
    transition .8s ease-out .0s
.input__focused
    border: 1px solid dark_shade_50
    {dark_shade_75-color}
.drop_down__block
	width 320px
	position relative
	display -webkit-inline-flex
	display -moz-inline-flex
	display -ms-inline-flex
	display -o-inline-flex
	display inline-flex
.drop_down__input
    {dark_shade_75-color}
.drop_down__icon
    font-family: Material Icons
    font-style: normal
    font-weight: normal
    font-size: 24px
    line-height: 24px
    margin 0px auto
    {dark_shade_75-color}
.drop_down__ui_form
	width 44px
	height 44px
	left 275px
	position absolute
	display -webkit-inline-flex
	display -moz-inline-flex
	display -ms-inline-flex
	display -o-inline-flex
	display inline-flex
	align-items center
	cursor pointer
.drop_down__list
	position absolute
	display none
	width: 320px
	height: 159px
	top 41px
	background-color #fff
	border 1px solid rgba(31, 32, 65, 0.5)
	box-sizing border-box
	box-shadow 0px 10px 20px rgba(31, 32, 65, 0.05) 
.drop_down__block:hover > .drop_down__list
	display block
	z-index 1
.drop_down__date-smal
	width 150px
	height 44px
.drop_down__date-medium
	width 266px
	height 44px
.disp_block
	margin-right 20px
.container
	display block
	position relative
	padding-left 35px
	margin-bottom 12px
	cursor pointer
	user-select none
	{montserrat}
	font-size: 14px
	line-height: 24px
	color: dark_shade_75
.container input
	position absolute
	opacity 0
	cursor pointer
	height 0
	width 0
.checkmark
	position absolute
	top 0
	left 0
	width 20px
	height 20px
	background-color #fff
	border 1px solid rgba(31, 32, 65, 0.25)
	box-sizing border-box
	border-radius 4px
.container input:checked ~ .checkmark
	border 1px solid $primary_color
.checkmark:after
	content ""
	position absolute
	display none
.container input:checked ~ .checkmark:after
	display block
.container .checkmark:after
	top 2px
	left 5px
	width 6px
	height 8px
	border solid $primary_color
	//border-image linear-gradient(to right top, blue, skyblue, blue)
	border-width 0 2px 2px 0
	background #fff
	transform rotate(45deg)
.menu
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	justify-content center
	height 70px
	background #FFFFFF
	box-shadow 0px 10px 20px rgba(31, 32, 65, 0.05)
.menu__container
	width 1120px
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	align-items center
	justify-content space-between
.menu__items
