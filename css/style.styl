@import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@300;700&display=swap')
@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap')
@import url('animate.css')
@font-face
  font-family: 'Material Icons'
  font-style: normal
  font-weight: 400
  src: url(../fonts/MaterialIcons-Regular.eot); /* For IE6-8 */
  src: local('Material Icons'),
       local('MaterialIcons-Regular'),
       url(../fonts/MaterialIcons-Regular.woff2) format('woff2'),
       url(../fonts/MaterialIcons-Regular.woff) format('woff'),
       url(../fonts/MaterialIcons-Regular.ttf) format('truetype')

.material-icons 
  font-family: 'Material Icons'
  font-weight: normal
  font-style: normal
  font-size: 24px  /* Preferred icon size */
  display: inline-block
  line-height: 1
  text-transform: none
  letter-spacing: normal
  word-wrap: normal
  white-space: nowrap
  direction: ltr
  /* Support for all WebKit browsers. */
  -webkit-font-smoothing: antialiased
  /* Support for Safari and Chrome. */
  text-rendering: optimizeLegibility
  /* Support for Firefox. */
  -moz-osx-font-smoothing: grayscale
  /* Support for IE. */
  font-feature-settings: 'liga'


//colors
dark_shade = #1F2041
dark_shade_75 = rgba(31, 32, 65, 0.75)
dark_shade_50 = rgba(31, 32, 65, 0.50)
dark_shade_25 = rgba(31, 32, 65, 0.25)
dark_shade_5 = rgba(31, 32, 65, 0.05)
.dark_shade-color //used
    color dark_shade 
.dark_shade-bg //used
    background dark_shade 
.dark_shade_50-color //used
    color dark_shade_50 
.dark_shade_25-color //used
    color dark_shade_25 
.dark_shade_25-bg //no used
    background dark_shade_25

dark_shade_50-color =
    color dark_shade_50 
dark_shade_75-color =
    color dark_shade_75 
//types
montserrat = 
    font-family: Montserrat
    font-style: normal
    font-weight: normal

//main_rules
.mr-0
    margin 0 !important
.hide
    display none !important
    
body
    background #E5E5E5
.wrapper
    width 100%
    min-height 100vh
.content
    max-width 1440px
    padding-top 150px
    margin 0 auto
.nav_bar
    margin-bottom 67px
    position fixed
    top 0
    left 0
.nav_bar__logo
    width 48px
    height 48px
    margin-top 30px
    margin-left 30px
.colors_type_block
    max-width 1440px
    min-height 100vh
    margin 0px auto
    display -webkit-flex
    display -moz-flex
    display -ms-flex
    display -o-flex
    display flex
    justify-content space-between
.colors_type_block__colors
    display -webkit-flex
    display -moz-flex
    display -ms-flex
    display -o-flex
    display flex
    justify-content space-between
    align-items center
    width 260px
    margin-bottom 20px
.colors__block
    margin-top: 140px
    margin-left: 150px
.colors_type_block__types
    margin-top: 140px
    margin-right: 190px
.color_block
    border-radius: 6px
    width 70px
    height 70px
    
.dark_shade_100-block
    background: dark_shade
.dark_shade-text
    color dark_shade



.dark_shade_75-block
    background: dark_shade_75
.dark_shade_50-block
    background: dark_shade_50
.dark_shade_25-block
    background: dark_shade_25
.dark_shade_5-block
    background: dark_shade_5
.purple-block
    background #BC9CFF
.green-block
    background #6FCF97
.item__name
    width: 159px
    font-family: Quicksand
    font-style: normal
    font-weight: bold
    font-size: 19px
    line-height: 29px
    display: flex
    align-items: center
.types_block
    display -webkit-flex
    display -moz-flex
    display -ms-flex
    display -o-flex
    display flex
    justify-content space-between
    margin-bottom 50px
    align-items baseline
.types__name
    width 30px
    margin-right 30px
.types__text
    width 336px
h1
    font-family: Quicksand
    font-style: normal
    font-weight: bold
    font-size: 24px
    line-height: 30px
    color dark_shade
    
h2
    font-family: Quicksand
    font-style: normal
    font-weight: bold
    font-size: 19px
    line-height: 24px
    color dark_shade
h3
    font-family: Montserrat
    font-style: normal
    font-weight: bold
    font-size: 12px
    line-height: 15px
    color dark_shade
    /* identical to box height */
    text-transform: uppercase
p
    {montserrat}
    font-size: 14px
    line-height: 24px
    /* or 171% */
    /* Dark 75% */
    color: dark_shade_75
    
.grid__body
    display grid
    grid-template-columns: 1fr 1fr 1fr
.grid__item
    margin 0px auto
.item__block
    width 320px
    margin-bottom 20px
.item__block-text
    display -webkit-flex
    display -moz-flex
    display -ms-flex
    display -o-flex
    display flex
    justify-content space-between
    margin-bottom 8px
input
    width: 320px
    height: 44px
    background: #FFFFFF
    border: 1px solid dark_shade_25
    box-sizing: border-box
    border-radius: 4px
    {montserrat}
    font-size: 14px
    line-height: 18px
    color dark_shade_25
    padding-left 15px
    transition 1s ease-out .3s
input:focus,input:hover
    border: 1px solid dark_shade_50
    outline none
    line-height: 24px
    {dark_shade_75-color}
    transition .8s ease-out .0s
.input__focused
    border: 1px solid dark_shade_50
    {dark_shade_75-color}
.drop_down__block
    width 320px
	position relative
	display -webkit-inline-flex
	display -moz-inline-flex
	display -ms-inline-flex
	display -o-inline-flex
	display inline-flex
.drop_down__input
    {dark_shade_75-color}
.drop_down__icon
    font-family: Material Icons
    font-style: normal
    font-weight: normal
    font-size: 24px
    line-height: 24px
    {dark_shade_75-color}
    margin 0 auto
.drop_down__ui_form
    width 44px
    height 44px
    position absolute
    display -webkit-inline-flex
    display -moz-inline-flex
    display -ms-inline-flex
    display -o-inline-flex
    display inline-flex
    align-items center
.drop_down__list
    position absolute
    display none
    width: 320px
    height: 159px
    background-color #fff
    border: 1px solid rgba(31, 32, 65, 0.5)
    box-sizing: border-box
    box-shadow: 0px 10px 20px rgba(31, 32, 65, 0.05) 
.drop_down__block:hover > .drop_down__list
    animation-fill-mode: forwards;
	display block